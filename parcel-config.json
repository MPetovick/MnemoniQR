{
  "extends": "@parcel/config-default",
  "transformers": {
    "*.{js,mjs,jsx,cjs,ts,tsx}": [
      "@parcel/transformer-babel",
      "@parcel/transformer-js"
    ]
  },
  "validators": {
    "*.{ts,tsx}": ["@parcel/validator-typescript"]
  },
  "optimizers": {
    "*.js": ["...", "@parcel/optimizer-terser"],
    "*.css": ["...", "@parcel/optimizer-cssnano"]
  }
}
